# Example environment variables for local development
# COPY THIS FILE to `.env` and fill real values. Do NOT commit real secrets to git.

# Enable debug/reloader: set to 1 for development, 0 for production
FLASK_DEBUG=1

# Application settings
DEBUG=True
# SECRET_KEY should be a secure random value in production; keep it secret and out of source control
SECRET_KEY=replace-with-secure-secret
DATABASE_URL=sqlite:///db.sqlite3

# YouTube Data API v3 key (optional for demo). Keep real keys out of version control.
# YOUTUBE_API_KEY=YOUR_API_KEY_HERE

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Cache TTL in seconds (default used by app if not set)
CACHE_TTL=3600
